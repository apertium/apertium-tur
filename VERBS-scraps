LEXICON PERS1  !!!USED FOR CONT, FUT, AOR, EVID
<p1><sg>:{I}m;
<p2><sg>:s{I}n;
<p3><sg>:;
<p1><pl>:{bY}{I}z;
<p2><pl>:s{I}n{I}<;
<p3><pl>:l{A}r;

LEXICON PERS2  !!!USED FOR PAST and CONDITIONAL
<p1><sg>:m;
<p2><sg>:n;
<p3><sg>:;
<p1><pl>:d{I}k;
<p2><pl>:{I}n{I}z;
<p3><pl>:l{A}r;

LEXICON PERS3  !!!USED FOR NECESSITATIVE
<p1><sg>:{bY}{I}m;
<p2><sg>:s{I}n;
<p3><sg>:;
<p1><pl>:{bY}{I}z;
<p2><pl>:s{I}n{I}z;
<p3><pl>:l{A}r;

LEXICON PERS4  !!!USED FOR IMPERATIVE
<p2><sg>:;
<p2><pl>:s{A}n{A};




